{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "ES2020",
    "target": "ES2020",
    "pretty": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts"]
}
